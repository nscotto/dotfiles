alias nvim="PATH=/opt/homebrew/bin:$PATH nvim"
alias vim="nvim"
alias v="nvim"
alias r="ranger"

# config
alias nconf="nvim $VIMRC"
alias vconf="nvim $VIMRC"
alias vrc="nvim $VIMRC"
alias zrc="nvim $VIMRC"

alias zconf="nvim $ZRC"
alias zrc="nvim $ZRC"

alias zlocal="nvim $ZLOCAL"
alias zalias="nvim $ALIASES"
alias aliases="nvim $ALIASES"

# git
alias gg="lazygit"
alias ginit="git init"
alias gadd="git add"
alias ga="git add"
alias gau="git add -u"
alias gc="git commit"
alias gca="git commit --allow-empty"
alias gs="git status"
alias grc="git rebase --continue"
alias gra="git rebase --abort"
alias grs="git rebase --skip"

alias gpl="gh pr list"
alias gps="gh pr status"

# python
alias ip="ipython"
alias p="python"
alias ca="conda activate"
alias cda="conda deactivate"

# suffix aliases
alias -s py="nvim"
alias -s cc="nvim"
alias -s c="nvim"
alias -s h="nvim"
alias -s json="nvim"
alias -s txt="nvim"
alias -s md="nvim"

# global aliases (for piped commands)
alias -g gp="grep"

# docker
alias ld="lazydocker"
alias d="docker"
alias dc="docker container"
alias dim="docker image"
alias dr="docker run"

alias vim="nvim"
alias v="nvim"
alias r=". $(which ranger)"

# config
alias nconf="nvim $VIMRC"
alias vconf="nvim $VIMRC"
alias vrc="nvim $VIMRC"
alias zrc="nvim $VIMRC"

alias zconf="nvim $ZRC"
alias zrc="nvim $ZRC"

alias zlocal="nvim $ZLOCAL"
alias zalias="nvim $ALIASES"
alias aliases="nvim $ALIASES"

# git
alias gg="lazygit"
alias ginit="git init"
alias gadd="git add"
alias gc="git commit"
alias gs="git status"

# suffix aliases
alias -s py="nvim"
alias -s cc="nvim"
alias -s c="nvim"
alias -s h="nvim"
alias -s json="nvim"
alias -s txt="nvim"
alias -s md="nvim"

# global aliases (for piped commands)
alias -g gp="grep"

# docker
alias d="docker"
alias dc="docker container"
alias dim="docker image"
alias dr="docker run"

